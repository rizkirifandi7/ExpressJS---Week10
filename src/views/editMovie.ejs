<%- include("_navbar") -%>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-8">
			<div class="card m-5">
				<div class="pt-4">
					<h4 class="text-center fw-bold">Edit Movie</h4>
				</div>
				<div class="card-body m-4">
					<form action="/movies/edit/<%= movie.id %>" method="post" enctype="multipart/form-data">
						<div class="mb-3">
							<label class="form-label" for="title">Title</label>
							<input type="text" id="title" name="title" class="form-control" value="<%= movie.title %>" />
						</div>

						<div class="mb-3">
							<label class="form-label" for="genres">Genres</label>
							<input type="text" id="genres" name="genres" class="form-control" value="<%= movie.genres %>" />
						</div>

						<div class="mb-3">
							<label class="form-label" for="year">Year</label>
							<input type="number" id="year" name="year" class="form-control" value="<%= movie.year %>" />
						</div>

						<div class="mb-3">
							<label for="photo" class="form-label">Choose file</label>
							<input class="form-control" type="file" id="photo" name="photo" value="<%= movie.photo %>" />
							<img src="/movies/uploads/<%= movie.photo %>" width="100" class="img-thumbnail mt-1" />
						</div>

						<input type="hidden" name="old_photo" value="<%= movie.photo %>" />

						<div class="mt-4">
							<button class="btn btn-success" type="submit">Submit</button>
							<a class="btn btn-danger" href="/movies/all">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include("_footer") -%>
