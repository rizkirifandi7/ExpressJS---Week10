<%- include("_navbar") -%>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-8">
			<div class="card m-5">
				<div class="pt-4">
					<h4 class="mb-0 text-center fw-bold"><%= locals.title %></h4>
				</div>
				<div class="card-body m-4">
					<form action="/movies/add" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
						<div class="mb-3">
							<label class="form-label" for="title">Title</label>
							<input type="text" id="title" name="title" class="form-control" placeholder="Enter title" required/>
							<div id="validationServerUsernameFeedback" class="invalid-feedback">Please enter title</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="genres">Genres</label>
							<input type="text" id="genres" name="genres" class="form-control" placeholder="Enter Genres" required/>
							<div id="validationServerUsernameFeedback" class="invalid-feedback">Please enter genres</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="year">Year</label>
							<input type="number" id="year" name="year" class="form-control" placeholder="Enter year" required/>
							<div id="validationServerUsernameFeedback" class="invalid-feedback">Please enter year</div>
						</div>

						<div class="mb-3">
							<label for="photo" class="form-label">Photo</label>
							<input class="form-control" type="file" id="photo" name="photo" required/>
							<div id="validationServerUsernameFeedback" class="invalid-feedback">Please enter photo</div>
						</div>

						<button class="btn btn-success mt-3 w-100" type="submit">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include("_footer") -%>
